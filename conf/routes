# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET      /app/evolution                                 @controllers.HomeController.evolutions

POST     /job/create/:groupName                         @controllers.JobController.createJob(groupName: String)
GET      /job/list/group/:groupName                     @controllers.JobController.listJobs(groupName: String)
GET      /job/fetch/group/:groupName/job/:jobName       @controllers.JobController.fetchJob(groupName: String, jobName: String)
GET      /job/list                                      @controllers.JobController.listDummyJobs
POST     /job/delete/group/:groupName/job/:jobName      @controllers.JobController.deleteJob(groupName: String, jobName: String)

POST     /trigger/create/:groupName                     @controllers.TriggerController.createTrigger(groupName: String)
GET      /trigger/list/group/:groupName                 @controllers.TriggerController.listTriggers(groupName: String)
GET      /trigger/group/:groupName/trigger/:triggerName @controllers.TriggerController.fetchTrigger(groupName: String, triggerName: String)

POST     /instance/kill/request/:instanceId             @controllers.InstanceController.requestInstanceKill(instanceId: String)
POST     /instance/kill/:instanceId                     @controllers.InstanceController.instanceKill(instanceId: String)
GET      /instance/logs/request/:instanceId             @controllers.InstanceController.requestShowLog(instanceId: String)
GET      /instance/logs/:instanceId                     @controllers.InstanceController.showLog(instanceId: String)

POST     /group/create                                  @controllers.GroupController.createGroup
GET      /groups                                        @controllers.GroupController.listGroups