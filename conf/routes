# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET      /app/evolution                              @controllers.HomeController.evolutions

POST     /job/create                                 @controllers.JobController.createJob
GET      /job/group/:groupName                       @controllers.JobController.listJobs(groupName: String)
GET      /job/group/:groupName/job/:jobName          @controllers.JobController.fetchJob(groupName: String, jobName: String)

POST     /trigger/create                             @controllers.TriggerController.createTrigger
GET      /trigger/group/:groupName                   @controllers.TriggerController.listTriggers(groupName: String)
GET      /trigger/group/:groupName/trigger/:jobName  @controllers.TriggerController.fetchTrigger(groupName: String, jobName: String)

POST     /instance/kill/request/:instanceId          @controllers.InstanceController.requestInstanceKill(instanceId: String)
POST     /instance/kill/:instanceId                  @controllers.InstanceController.instanceKill(instanceId: String)